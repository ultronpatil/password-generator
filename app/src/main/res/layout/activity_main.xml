<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Password Generator"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000" />

    <!-- Password Display EditText -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="365dp"
        android:layout_height="59dp"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="11dp"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/editbox_background"
        android:enabled="false"
        android:gravity="center"
        android:hint="Generated password"
        android:padding="10dp"
        android:textSize="18sp"
        tools:ignore="LabelFor" />

    <!-- Include Numbers Checkbox -->
    <CheckBox
        android:id="@+id/includeNumbersCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Include Numbers"
        android:layout_centerInParent="true" />

    <!-- Include Symbols Checkbox -->
    <CheckBox
        android:id="@+id/includeSymbolsCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/includeNumbersCheckbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Include Symbols"
        android:layout_centerInParent="true" />

    <!-- Include Uppercase Checkbox -->
    <CheckBox
        android:id="@+id/includeUppercaseCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/includeSymbolsCheckbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Include Uppercase"
        android:layout_centerInParent="true" />

    <!-- Include Lowercase Checkbox -->
    <CheckBox
        android:id="@+id/includeLowercaseCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/includeUppercaseCheckbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:minHeight="48dp"
        android:text="Include Lowercase"
        android:layout_centerInParent="true" />

    <!-- Password Length TextView -->
    <TextView
        android:id="@+id/passwordLengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/includeLowercaseCheckbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Password Length: 20"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_centerInParent="true" />

    <!-- Copy Password Button -->
    <Button
        android:id="@+id/copyPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordLengthTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Copy Password"
        android:layout_centerInParent="true" />

    <!-- Generate Password Button -->
    <Button
        android:id="@+id/generatePasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/copyPasswordButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Generate Password"
        android:layout_centerInParent="true" />

</RelativeLayout>
